<%= turbo_frame_tag "frame_tabs", autoscroll: true, data: { autoscroll_block: "start", autoscroll_behavior: "smooth"}  do %>
  <div class="row g-0" id="client-data">
   
      <div class="card mb-3">
        <div class="card-header bg-light">
          <h5 class="mb-0 text-success fw-normal" id="measurements">Reports</h5>
          
        </div>
      </div>


      <div class="card mb-3">
        <div class="card-header bg-light">
          <h5 class="mb-0">Project Reports</h5>
        </div>
        <div class="card-body text-justify">
          <div class="card bg-light mb-2">
            
          </div>   


        </div>

      </div>

  

      <div class="card mb-3">
        <div class="card-header bg-light">
          <h5 class="mb-0">Reports PDF</h5>
        </div>
        <div class="card-body text-justify">
          <div class="card bg-light mb-2">
            <div class="card-body p-3">
              <p class="fs--1 mb-0">
              <%= link_to project_report_project_path(@project, format: :pdf), target: "_blank" do  %>
                <span class="fas fa-exchange-alt me-2" data-fa-transform="rotate-90">
                </span>
                Create a project report pdf file for archiving 
              <%end%>
            </div>
            
          </div>   


        </div>

      </div>
  
  </div>
<%end%>