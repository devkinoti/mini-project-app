<% unless team_member.id == nil %>
  <div class="col-6 col-md-4 col-lg-3 col-xxl-2 mb-1">
    <div class="bg-white dark__bg-1100 p-3 h-100">
      <%= link_to image_tag("team/man.png", class: "img-thumbnail img-fluid rounded-circle mb-3 shadow-sm", alt: "", width: "100"), team_member %>
      <h6 class="mb-1">
        <%= team_member.first_name %>
      </h6>
      <%= button_to remove_team_member_project_task_path(@project,@task), params: {team_member_id: team_member.id }, method: :patch, class: "btn btn-outline-danger btn-sm fs--2" do  %>
        Remove from task <span class="fas fa-trash ms-1" data-fa-transform="shrink-3"></span>
      <%end%>
    </div>
  </div>
<%end%>