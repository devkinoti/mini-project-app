<main class="main" id="top">
  <div class="container" data-layout="container">
    <%= render "shared/dashboard_sidebar" %>
    <div class="content">
      <%= render "shared/utilities_navigation"%>
      <%= render "layouts/flash" %>

      <!-- hello card -->

      <div class="col-12 mb-4">
        <div class="card bg-transparent-50 overflow-hidden">
          <div class="card-header position-relative">
            <div class="bg-holder d-none d-md-block bg-card z-index-1" style="background-image:url(<%= asset_path "ledger_cub_person.png" %>);background-size:150px;background-position:85% 75%;z-index:-1;">
            </div>
            <!--/.bg-holder-->

            <div class="position-relative z-index-2">
              <div>
                <h3 class="text-primary mb-1">Hello, <%= current_project_member.first_name.capitalize %>!</h3>
                <p><%= Time.now.strftime("%d %b %Y at %H:%M %p") %></p>
              </div>
              <div class="d-flex py-3">
                <div class="pe-3">
                  <p class="text-600 fs--1 fw-medium">Total Projects</p>
                  <h4 class="text-800 mb-0">
                  <% if project_member_signed_in? %>
                    <%= Project.count %>
                  <%end%>
                  </h4>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body p-0">
            <ul class="mb-0 list-unstyled">
              <li class="alert mb-0 rounded-0 py-3 px-card greetings-item border-top border-x-0 border-top-0">
                <div class="row flex-between-center">
                  <div class="col">
                    <div class="d-flex">
                      <div class="fas fa-circle mt-1 fs--2 text-primary"></div>
                      <p class="fs--1 ps-2 mb-0">
                      <%= link_to projects_path do %>
                        <strong>
                          <%= pluralize(Project.count, "projects") %> created
                        </strong>
                      <%end%>
                      </p>
                    </div>
                  </div>
                  <div class="col-auto d-flex align-items-center">
                    <%= link_to projects_path, class: "alert-link fs--1 fw-medium" do %>
                      View projects
                      <i class="fas fa-chevron-right ms-1 fs--2"></i>
                    <%end%>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- end of hello card -->

      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header">
            <div class="row flex-between-center g-0">
              <div class="col-auto">
                <h6 class="mb-0">Total Project Volume by Month</h6>
              </div>

            </div>
          </div>
          <div class="card-body pe-xxl-0">
            <div data-controller="dashboard-project-chart" 
                 data-dashboard-project-chart-month-value="<%= @month_names %>"
                 data-dashboard-project-chart-projects-value="<%= @monthly_project_total %>">
              <div class="echart-line-total-sales-ecommerce" 
              data-echart-responsive="true" 
              data-dashboard-project-chart-target="dashboardProjects"
              ></div>
            </div>
          </div>
        </div>
      </div>




    
 
    </div>
  </div>
</main>